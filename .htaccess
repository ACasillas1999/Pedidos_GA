# Bloquear acceso directo a archivos de migración e importación
<FilesMatch "^(importar_vehiculos\.php|importar_migracion\.php|limpiar_e_importar\.php|EJECUTAR_ESTA_MIGRACION\.sql)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquear acceso a archivos de configuración
<FilesMatch "^(Conexion\.php|conexion\.php)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquear acceso a directorios sensibles
<DirectoryMatch "^.*/migrations.*$">
    Order Allow,Deny
    Deny from all
</DirectoryMatch>

# Permitir solo a localhost (IP del servidor) acceder a archivos de migración
# Si necesitas ejecutarlos, descomenta las siguientes líneas:
# <FilesMatch "^(importar_vehiculos\.php|importar_migracion\.php)$">
#     Order Deny,Allow
#     Deny from all
#     Allow from 127.0.0.1
#     Allow from ::1
# </FilesMatch>
